<p id="notice"><%= notice %></p>
<div class="course-show">
  <header class="intro">
    <h1><%= @course.title %></h1>
  </header>

  <div class="mdl-grid show-grid">
    <div class="mdl-cell mdl-cell--8-col show-cell">
      <div class="mdl-card mdl-shadow--2dp main-card">
        <div class="mdl-card__title custom-card__title show--card-title">
          <div class="title-container">
            <h2 class="mdl-card__title-text custom-card__title-text listing__custom-title show-title">
            <%= @course.title %>
            </h2>
            <h2 class="mdl-card__supporting-text custom-card__supporting-text show--supporting-text">by author</h2>
          </div>
          <div class="add-button">
            <a href="/cart/<%= @course.id %>" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button-light add-button--style"> Add to my Courses </a>
          </div>
        </div>
        <div class="header-picture">
          
        </div>
        <div class="description">
          <h1>Description</h1>
          <p>
            <%= @course.description %>
          </p>
        </div>
      </div>
    </div>
    <div class="show--column mdl-cell mdl-cell--4-col">
      <div class="mdl-card mdl-shadow--2dp main-card side-card">
        <div class="mdl-card__title custom-card__title show--card-title">
          <div class="title-container">
            <h2 class="mdl-card__title-text custom-card__title-text listing__custom-title show-title">
            Summary
            </h2>
          </div>
        </div>
      </div>
      <div class="mdl-card mdl-shadow--2dp main-card side-card">
        
      </div>
    </div>

  </div>

  <p>
    <strong>Date:</strong>
    <%= @course.time %>
  </p>

  <p>
    <strong>From:</strong>
    <%= @course.fromtime %>
  </p>

  <p>
    <strong>To:</strong>
    <%= @course.totime %>
  </p>

  <p>
    <strong>Place:</strong>
    <%= @course.place %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= @course.image_url %>
  </p>

  

  <% if current_user.try(:admin?) %>
    <%= link_to 'Edit', edit_course_path(@course) %> |
    <%= link_to 'Back', courses_path %>
  <% end %>
</div>