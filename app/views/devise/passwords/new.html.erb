<header class="intro txt-ignore">
  <h1>Forgot your password?</h1>
</header>

<div class="send-password--frame txt-ignore">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="mdl-textfield mdl-js-textfield devise__textfield">
      <%= f.email_field :email, :class => "mdl-textfield__input", :id => "email_login",  autofocus: true %>
      <%= f.label :email, :class => "mdl-textfield__label", :for => "email_login" %>
    </div>

    <div class="actions">
      <%= f.submit "Reset my password", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect button-light login__button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %> 
</div>

