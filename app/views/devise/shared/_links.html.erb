<%- if controller_name != 'sessions' %>
  <div class="sign-up__frame">
    <%= link_to "Einloggen", new_session_path(resource_name), :class => "mdl-button mdl-js-button mdl-js-ripple-effect sign-up_button" %>
  </div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="sign-up__frame">
      <%= link_to "Registrieren", new_registration_path(resource_name), :class => "mdl-button mdl-js-button mdl-js-ripple-effect sign-up_button" %>
    </div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Passwort vergessen?", new_password_path(resource_name), :class => "forgot_password"%><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Keine BestÃ¤tigungs E-Mail erhalten?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Keine Freischaltungs E-Mail erhalten?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Melde dich mit #{OmniAuth::Utils.camelize(provider)} an", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
